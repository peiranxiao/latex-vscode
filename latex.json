    "Itemize": {
        "prefix": "item",
        "body": [
            "\\\\begin{itemize}",
            "\t\\item $0",
            "\\\\end{itemize}"
        ]
    },
    "Listing": {
        "prefix": "listing",
        "body": [
            "${1:Listing}~\\ref{${2:lst:}}$0"
        ]
    },
    "Matrix": {
        "prefix": "mat",
        "body": [
            "\\begin{${1:p/b/v/V/B/small}matrix}",
            "\t$0",
            "\\end{${1:p/b/v/V/B/small}matrix}"
        ]
    },
    // "Page": {
    //     "prefix": "page",
    //     "body": [
    //         "${1:page}~\\pageref{$2}$0"
    //     ]
    // },
    "Paragraph": {
        "prefix": "paragraph",
        "body": [
            "\\paragraph{${1:paragraph name}}",
            // "\\label{par:${2:${1/(\\w+)(\\W+$)?|\\W+/${1:?${1:/asciify/downcase}:_}/g}}}",
            "${0:$TM_SELECTED_TEXT}"
            // "% paragraph $2 (end)"
        ]
    },
    "Part": {
        "prefix": "part",
        "body": [
            "\\part{${1:part name}} % (fold)",
            // "\\label{prt:${2:${1/(\\w+)(\\W+$)?|\\W+/${1:?${1:/asciify/downcase}:_}/g}}}",
            "${0:$TM_SELECTED_TEXT}",
            // "% part $2 (end)"
        ]
    },
    "Region Start": {
        "prefix": "#region",
        "body": [
            "%#Region $0"
        ],
        "description": "Folding Region Start"
    },
    "Region End": {
        "prefix": "#endregion",
        "body": [
            "%#Endregion"
        ],
        "description": "Folding Region End"
    },
