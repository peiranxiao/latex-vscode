	"Tabular": {
        "prefix": "tab",
        "body": [
            "\\\\begin{tabular}{${2:c}}",
            "$0 ",
            "\\\\end{tabular}"
        ],
        "desciption": "Tabular"
    },
    "\\begin{}…\\end{}": {
        "prefix": "begin",
        "body": [
            "\\\\begin{${1:env}}",
            "\t${1/(enumerate|itemize|list)|(description)|.*/(?1:\\item )(?2:\\item)/}$0",
            "\\\\end{${1:env}}"
        ]
    },
	"Newpage": {
        "prefix": "newpage",
        "body": [
				"\\newpage"
        ]
	},
	// "Pagebreak": {
    //     "prefix": "pagebreak",
    //     "body": [
