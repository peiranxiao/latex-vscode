    //     ]
	// },
	"Usepackage": {
        "prefix": "usepackage",
        "body": [
            "\\usepackage{${1:package name}}",
			"$0"
        ]
    },
	"Inline": {
        "prefix": "inline",
        "body": [
            "$$1$ $0"
        ]
    },
    "Footnote": {
        "prefix": "footnote",
        "body": [
            "%",
            "\\footnote{${1:$TM_SELECTED_TEXT}}",
            "$0"
        ]
    },
    "Cite": {
        "prefix": "cite",
        "body": [
            "\\cite{$0}"
        ]
    },
    "Citep": {
        "prefix": "citep",
        "body": [
            "\\citep[$1][$2]{$0}"
        ]
    },
    "Citet": {
        "prefix": "citet",
        "body": [
            "\\citet[$1]{$0}"
        ]
    },
    "Citeauthor": {
        "prefix": "citeauthor",
        "body": [
            "\\citeauthor{$0}"
        ]
    },
    "Bibliography": {
        "prefix": "bibliography",
        "body": [
            "\\bibliography{$1}",
            "$0"
        ]
    },
    "Bibliographystyle": {
        "prefix": "bibliographystyle",
        "body": [
            "\\bibliographystyle{$1}",
            "$0"
        ]
    },
    "Singlespacing": {
        "prefix": "singlespacing",
        "body": [
            "\\singlespacing",
            "$0"
        ]
    },
    "Doublespacing": {
        "prefix": "doublespacing",
        "body": [
            "\\doublespacing",
            "$0"
        ]
    },
    "Bibitem": {
        "prefix": "bibitem",
        "body": [
            "\\bibitem{$1} $0"
        ]
    },
    "Emph": {
        "prefix": "emph",
        "body": [
            "\\emph{${1:$TM_SELECTED_TEXT}} $0"
        ]
    },
}
