    "Split": {
        "prefix": "spl",
        "body": [
            "\\begin{split}",
            "\t$0",
            "\\end{split}"
        ]
    },
    "Sub Paragraph": {
        "prefix": "subp",
        "body": [
            "\\subparagraph{${1:subparagraph name}} $0",
            // "\\label{subp:${2:${1/(\\w+)(\\W+$)?|\\W+/${1:?${1:/asciify/downcase}:_}/g}}}",
            // "${0:$TM_SELECTED_TEXT}",
            // "% subparagraph $2 (end)"
        ]
    },
    "Sub Section": {
        "prefix": "subsection",
        "body": [
            "\\subsection{${1:subsection name}}",
            // "\\label{sub:${2:${1/(\\w+)(\\W+$)?|\\W+/${1:?${1:/asciify/downcase}:_}/g}}}",
            "${0:$TM_SELECTED_TEXT}",
            // "% subsection $2 (end)"
        ]
    },
    "Sub Sub Section": {
        "prefix": "subsubsec",
        "body": [
            "\\subsubsection{${1:subsubsection name}}",
            // "\\label{ssub:${2:${1/(\\w+)(\\W+$)?|\\W+/${1:?${1:/asciify/downcase}:_}/g}}}",
            "${0:$TM_SELECTED_TEXT}",
            // "% subsubsection $2 (end)"
        ],
        "desciption": "Sub Sub Section"
    },
    "Table": {
        "prefix": "table",
        "body": [
            "${1:Table}~\\ref{${2:tab:}}$0"
        ],
        "desciption": "Table"
    },
